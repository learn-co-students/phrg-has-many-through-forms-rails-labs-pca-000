<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

     <%= f.label :content %>
    <%= f.text_area :content %>

     <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

    <p>Category: </p>
    <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
      <%= category_fields.label :name %>
      <%= category_fields.text_field :name, list: 'category_name' %>
        <datalist id='category_name'>
          <% Category.all.each do |category| %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% end %>
        </datalist>
    <% end %><br><br>

     <%= f.submit %>

 <% end %>
